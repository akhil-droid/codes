#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    int T;
    cin >> T;
    int t=1;
    while(t<=T){
        int N;
        cin >> N;
        long long int a[N];
        long long int b[N];
        long long int sum=0;
        for(int i=0;i<N;i++){
            cin >> a[i];
            sum=sum+a[i];
            if((a[i]%10)%2==0){
                b[i]=a[i];
            }
        }
        
        if(sum%2==0){
            cout << 0;
            continue;
        }
        int len = sizeof(a)/sizeof(a[0]);
        int count =0,sum1=0;
        int b1;
        for(int i=0;i<len;i++){
            b1=b[i];
            if(b1<2){
                continue;
            }
            b1=max(0,(b1/2)-1);
            count ++;
            sum1=sum-b1;
            if(sum1%2==0){
                cout << count ;
                break;
            }
            else{
                if(count == N){
                cout << -1;
                }
            }
        }
        t++;
    }

    
    return 0;}
